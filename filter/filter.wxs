var filter = {
  getDate: function (time,type) {
    var week = ["星期一", "星期二", "星期三", "星期四", "星期五", "星期六", "星期日",];
    if(time){
      time = Number(time);
      var date = getDate(time);//时间戳为10位需*1000，时间戳为13位的话不需乘1000
      Y = date.getFullYear() + '-';
      M = (date.getMonth() + 1 < 10 ? '0' + (date.getMonth() + 1) : date.getMonth() + 1) + '-';
      D = date.getDate() < 10 ? '0' + date.getDate() : date.getDate();
      D = D + " ";
      h = date.getHours() < 10 ? '0' + date.getHours() + ":" : date.getHours() + ":";
      m = date.getMinutes() < 10 ? '0' + date.getMinutes() : date.getMinutes();
      s = date.getSeconds() < 10 ? '0' + date.getSeconds() : date.getSeconds();
      if (type == 1) {
        return Y + M + D + h + m + ":" + s
      } else if (type == 2) {
        return Y + M + D
      } else if(type == 3){
        return Y + M + D + h + m
      } else if(type == 4){
        return h + m + ":" + s
      } else if(type == 5){
        return h + "00"
      } else if(type == 6){
        return h + m
      } else if (type==7){
        return M + D + h + m
      } else if(type==8){
        var index = date.getDay()-1;
        return week[index]
      }
    }else{
      return "未知"
    }
  },
  getSurplusDay: function (time,day) {
    var date = getDate().getTime();
    var endTime = time + day*86400000;
    var surplusDay = ((endTime - date) / 86400000);
    return Math.round(surplusDay)
  },
  addBaseUrl: function (url){
    if(url){
      if (url.indexOf("http") == -1) {
        return "https://jiajia.uchar.cn/jiajia" + url
        //return "https://app.kilobee.com/jiayou" + url
      }else{
        return url
      }
    }else{
      //return "../../images/default.png"
    }
  }
}

module.exports = {
  filter: filter
}
